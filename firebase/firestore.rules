rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções Auxiliares ---

    // Verifica se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o usuário é dono do recurso (pelo ID)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Verifica se o usuário é dono do recurso (pelo campo data.userId)
    function isResourceOwner() {
      return isAuthenticated() && (
        (resource != null && resource.data.userId == request.auth.uid) ||
        (request.resource != null && request.resource.data.userId == request.auth.uid)
      );
    }

    // Busca dados do usuário para verificar papel (Role)
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica papel específico
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('manager') || isAdmin();
    }

    function isTeacher() {
      return hasRole('teacher') || isAdmin();
    }

    function isMaterialManager() {
      return hasRole('material_manager') || isAdmin();
    }

    // --- Regras por Coleção ---

    // Usuários
    match /users/{userId} {
      // Leitura permitida para qualquer usuário autenticado (Necessário para Chat, Perfil, etc.)
      // Dados sensíveis financeiros estão em coleções separadas.
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated(); // Permite criação no primeiro login
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Regras para Cadernos (Notebooks) e Colaboração (Yjs)
      match /Notebooks/{notebookId} {
        allow read: if isOwner(userId) || isTeacher() || isManager();
        allow write: if isOwner(userId) || isTeacher() || isManager();
        
        // Permite acesso a todas as subcoleções (versions, yjs, history, awareness, etc.)
        match /{document=**} {
           allow read: if isOwner(userId) || isTeacher() || isManager();
           allow write: if isOwner(userId) || isTeacher() || isManager();
        }
      }
    }

    // Informações Bancárias (Professores)
    match /teacherBankingInfo/{docId} {
      allow read: if isOwner(docId) || isManager();
      allow write: if isOwner(docId) || isAdmin();
    }

    // --- Conteúdo Pedagógico (Acesso Público para Leitura / Restrito para Escrita) ---
    
    match /lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }
    
    match /Apostilas/{docId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
      
      match /Lessons/{lessonId} {
        allow read: if isAuthenticated();
        allow write: if isMaterialManager();
      }
    }

    match /learningItems/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }

    match /learningStructures/{structId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }

    match /tiptap/{docId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();

      match /questions/{qId} {
         allow read: if isAuthenticated();
         allow write: if isMaterialManager();
      }
      match /questions_decks/{dId} {
         allow read: if isAuthenticated();
         allow write: if isMaterialManager();
      }
    }
    
    match /editorDocuments/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Refinar conforme uso (provavelmente owner ou shared)
    }

    // --- Progresso e Planos do Aluno ---

    match /plans/{planId} {
      allow read: if isResourceOwner() || isTeacher();
      allow write: if isResourceOwner() || isTeacher();
    }

    match /placement_results/{resultId} {
      allow read: if isResourceOwner() || isTeacher();
      allow create: if isResourceOwner();
      allow update, delete: if isAdmin();
    }

    match /placement_progress/{docId} {
      allow read: if isOwner(docId) || isTeacher();
      allow write: if isOwner(docId) || isAdmin();
    }

    // --- Agendamento e Aulas ---

    match /classes/{classId} {
      // Leitura: Professor, Aluno ou Manager
      allow read: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid || 
        resource.data.studentId == request.auth.uid ||
        isManager()
      );
      // Criação: Aluno agendando para si ou Manager/Admin
      allow create: if isAuthenticated() && (
        request.resource.data.studentId == request.auth.uid ||
        isManager()
      );
      // Atualização: Envolvidos ou Manager
      allow update: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid || 
        resource.data.studentId == request.auth.uid ||
        isManager()
      );
    }

    match /availabilities/{docId} {
      allow read: if isAuthenticated();
      allow write: if isResourceOwner() || isManager();
    }

    match /availabilityExceptions/{docId} {
       allow read: if isAuthenticated();
       allow write: if isResourceOwner() || isManager();
    }

    match /vacations/{docId} {
       allow read: if isAuthenticated();
       allow write: if isResourceOwner() || isManager();
    }

    // --- Financeiro (Alta Segurança) ---

    match /subscriptions/{subId} {
      allow read: if isResourceOwner() || isManager();
      allow write: if isAdmin(); 
    }

    match /monthlyPayments/{payId} {
      allow read: if isResourceOwner() || isManager();
      allow write: if isAdmin();
    }

    match /payments/{payId} {
      allow read: if isResourceOwner() || isManager();
      allow write: if isAdmin();
    }

    match /occasionalPurchases/{purchaseId} {
      allow read: if isResourceOwner() || isManager();
      allow write: if isAdmin();
    }

    match /creditTransactions/{transId} {
      allow read: if isResourceOwner() || isManager();
      allow write: if isAdmin();
    }

    // --- Sistema e Comunicação ---

    match /announcements/{announceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Refinar: Idealmente apenas assignedTo ou createdBy
    }

    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin(); // Geralmente escrito via Backend
    }

    // --- Imersão (Podcasts e Blogs) ---
    match /podcasts/{podcastId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }
    
    match /blogs/{blogId} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }
    
    match /userPodcastProgress/{progressId} {
       allow read: if isResourceOwner();
       allow write: if isResourceOwner();
    }

    // --- Regra Padrão (Bloqueio Total) ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
