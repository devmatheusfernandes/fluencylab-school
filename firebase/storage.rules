rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Funções Auxiliares ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Nota: Para Storage, a verificação de roles depende de Custom Claims no token de auth.
    // Certifique-se de que seu backend está definindo `admin` e `material_manager` nos claims do usuário.
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isMaterialManager() {
      return request.auth.token.role == 'material_manager' || isAdmin();
    }

    // --- Regras por Caminho ---

    // Avatares de Usuário (Público para leitura)
    match /avatars/{userId}/{fileName} {
      allow read: if true; 
      allow write: if isOwner(userId) || isAdmin();
    }

    // Conteúdo do Curso (Aulas, Áudio, Imagens)
    match /lessons/{lessonId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }

    match /courses/{courseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }
    
    match /workbookCovers/{allPaths=**} {
       allow read: if isAuthenticated();
       allow write: if isMaterialManager();
    }

    // Uploads Gerais de Usuários (Editor, Tarefas, etc.)
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Imersão (Podcasts e Blogs)
    match /immersion/podcasts/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }

    match /immersion/blogs/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isMaterialManager();
    }

    // Regra Padrão (Bloqueio Total)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
