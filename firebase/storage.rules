rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read avatars (public access for display)
    match /avatars/{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write only to their own avatar directory
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // User uploads for editor images
    match /user-uploads/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
